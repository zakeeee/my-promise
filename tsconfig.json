{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "vitest/globals",
    ]
  },
  "include": [
    "src",
  ],
}